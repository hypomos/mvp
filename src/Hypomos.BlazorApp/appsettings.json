{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  "Spring": {
    "Application": {
      "Name": "Hypomos.Blazor.Steeltoe"
    },
    "Cloud": {
      "Kubernetes": {
        "Reload": {
          "Mode": "Event",
          "ConfigMaps": "true",
          "Secrets": "true"
        }
      }
    }
  },
  "Management": {
    "Endpoints": {
      "Actuator": {
        "Exposure": {
          "Include": ["*"]
        }
      }
    }
  }
}